<div class="d-flex flex-column justify-content-md-center align-items-center container-size" >
   <div class="row col-md-5">
      <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12 text-center">
                    <h2>Login</h2>
                    </div>
                </div>
                <div class="row">
                        <div class="col-md-12">
                             <% if flash[:error] %> 
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <strong><%= flash[:error] %> </strong>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                             <% end %>
                            <%= form_with url: login_path, local: true do |f| %> 
                                    <div class="col-md-12">
                                            <%= f.label :email, :class=>'form-label' %>
                                            <%= f.text_field :email, :class=> 'form-control col-md-12'%>
                                    </div>
                                    <div class="col-md-12">
                                        <%= f.label :password , :class=>'form-label' %>
                                        <%= f.password_field :password, :class=> 'form-control col-md-12'%> 
                                    </div>
                                    <div class="col-md-12 py-3">
                                        <%= f.submit "Login", :class => 'btn btn-primary col-md-12' %> 
                                    </div>
                        <% end %>
                        </div>
                </div>
            </div>
   </div>
</div>