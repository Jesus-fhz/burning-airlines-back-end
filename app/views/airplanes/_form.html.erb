<div class="row">
    <div class="col-md-12">
        <%= form_with model: @airplane, local: true do |f| %>
            <%= f.label :name, :class=> "form-label" %>
            <%= f.text_field :name,:class=> "form-control" , :required => true %>
            <%= f.label :rows, :class=> "form-label" %>
            <%= f.number_field :rows,  :class=>'form-control', :required => true %>
            <%= f.label :Columns, :class=> 'form-label'  %>
            <%= f.number_field :columns,:class=> 'form-control', :required => true %>
            <%= f.submit 'Save',  :class => 'btn btn-primary col-md-2 my-3' %>
        <% end %>
    </div>
</div>
 
                            
