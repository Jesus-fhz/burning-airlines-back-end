<!DOCTYPE html>
<html>
  <head>
    <title>RailsBaBackend</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <header class="nav-banner">
      <nav>
        <% if @current_user && @current_user.admin %>
          <%= link_to 'Airlpanes', airplanes_path %>
          <%= link_to 'Flights', flights_path %>
        <% end %>
          <% if @current_user.present? %>
          <div id="logout">
            <p>
              Signed in as: <%= link_to "#{@current_user.name}", edit_user_path(@current_user.id) %>
              |
              <%= link_to 'Logout', login_path, method: 'delete' %>
            </p>
          </div>
            <% else %>
              <div id="login">
                <p>
                  <%= link_to 'Login', login_path %>
                </p>
              </div>
            <% end %>
          </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
