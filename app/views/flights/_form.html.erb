<div class="row">
    <div class="col-md-12">
    <%= form_with model: @flight, local: true do |f| %>
        <%= f.label :date, :class=>'form-label' %>
        <%= f.date_field :date_flight,:class=>'form-control', required: "true"  %>
        <%= f.label :origin, :class=>'form-label' %>
        <%= f.text_field :origin,:class=>'form-control', required: "true"  %>
        <%= f.label :destination,:class=>'form-label'  %>
        <%= f.text_field :destination,:class=>'form-control', required: "true"  %>
        <%= f.label :plane, :class=>'form-label'   %>
        <%= f.collection_select :airplane_id, Airplane.all, :id, :name, { include_blank: "Select option..." }, { class: "form-select",  required: "true" } %>
        <%= f.submit  :class => 'btn btn-primary col-md-2 my-3' %>
    <% end %>
    </div>
</div>