<div class="container p-4"> 
    <div class="row">
            <div class="col-md-12">
              <h4>Reservations </h4> 
          </div>
      </div>
      <hr>

    <div class="d-flex justify-content-center my-5"> 
        <div class="card col-md-12">
            <div class="card-header d-flex justify-content-between">
                <div> <h4>Reservation details </h4> </div>
                    <div> 
                      <%= link_to 'Edit', edit_reservation_path(@reservation), :class => 'btn btn-outline-danger' %> 
                      <%= link_to 'Delete', reservation_path(@reservation),:class => 'btn btn-outline-danger', method: 'delete' %>
                      <%= link_to 'Go Back', reservations_path, :class => 'btn btn-outline-danger' %>
                    </div>
                </div>

        <div class="card-body">

        <table class="table  table-hover table-bordered">

            <thead>
                <tr class="bg-light">
                <th>Date</th>
                <th>Depart from</th>
                <th>Destination</th>
                <th>Row</th>
                <th>Column</th>
                <th>Passenger</th>
                </tr>
            </thead>


        <tbody>

            <tr>
                <td><%= @reservation.flight.date_flight %></td>
                <td><%= @reservation.flight.origin %></td>


                <td><%= @reservation.flight.destination %></td>
                <td><%= @reservation.row %></td>
                <td><%= @reservation.column %></td>
                <td><%= @reservation.user.name %></td>
            </tr>
            

        </tbody>

        </table>
        </div>
        </div>
    </div>
</div>